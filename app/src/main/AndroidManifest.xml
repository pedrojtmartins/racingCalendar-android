<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pedrojtmartins.racingcalendar">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Views.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Views.Activities.FavoritesActivity"
            android:parentActivityName=".Views.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            //This will be used by the go back button in the app bar
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Views.Activities.MainActivity"/>
        </activity>

        <activity android:name=".Views.Activities.SettingsActivity">
        </activity>

    </application>

</manifest>