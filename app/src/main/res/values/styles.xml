<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:icon">@color/icons</item>

        <!--&lt;!&ndash;To change the text styling of options menu items</item>&ndash;&gt;-->
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">#fafafa</item>

        <item name="popupMenuStyle">@style/Widget.AppCompat.PopupMenu</item>
        <item name="editTextStyle">@style/EditTextDefault</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyActionBar.MenuTextStyle" parent="style/TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--List divider-->
    <style name="ListDividerTopRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/listDividerTopRow</item>
    </style>

    <style name="ListDividerBottomRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/listDividerBottomRow</item>
    </style>

    <style name="WeekDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#fff</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:gravity">center_horizontal</item>-->
    </style>


    <!--Series row-->
    <style name="SeriesRowParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="SeriesHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#f2f2f2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="SeriesRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SeriesTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SeriesRacesTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:lines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--SomethingMissing-->
    <style name="SomethingMissing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SomethingMissingFix">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SCBSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_dark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/tintDisabled</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/tintDisabled</item>
    </style>

    <style name="EditTextDefault" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/custom_edit_text_background</item>
        <!--<item name="back">@color/primary_text</item>-->
        <!--<item name="colorControlNormal">@color/primary_text</item>-->
        <!--<item name="colorPrimary">@color/primary_text</item>-->
        <!--<item name="colorPrimaryDark">@color/primary_text</item>-->

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!-- Used for the background -->
        <item name="android:background">#fafafa</item>
    </style>

    <style name="RaceRowDateNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="RaceRowDateBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RaceRowDateAlarm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">#A0A0A0</item>
    </style>

    <style name="RaceRowDatesContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RaceRowWeekHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">#A0A0A0</item>
    </style>

    <!--Race Results Header-->
    <style name="ResultsRaceHeaderPositionCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultsRaceHeaderNamesCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">12</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultsRaceHeaderDeltaCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <!--Race Results Body-->
    <style name="ResultsRacePositionsCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ResultsRaceNamesCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">12</item>
    </style>

    <style name="ResultsRaceDeltaCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">right</item>
    </style>

    <!--Race Standings Header-->
    <style name="ResultsStandingsHeaderPositionsCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultsStandingsHeaderNamesCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">8</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultsStandingsHeaderPointsCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <!--Race Standings Body-->
    <style name="ResultsStandingsPositionsCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ResultsStandingsNamesCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="ResultsStandingsPointsCol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
